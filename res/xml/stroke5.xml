<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
    android:keyWidth="10%p"
    android:horizontalGap="0dip"
    android:verticalGap="@dimen/key_verticalgap"
    android:keyHeight="@dimen/key_height"
    >

    <Row>
        <Key android:codes="113" android:keyLabel="手" android:keyEdgeFlags="left"/>
        <Key android:codes="119" android:keyLabel="田"/>
        <Key android:codes="101" android:keyLabel="水"/>
        <Key android:codes="114" android:keyLabel="口"/>
        <Key android:codes="116" android:keyLabel="廿"/>
        <Key android:codes="121" android:keyLabel="卜"/>
        <Key android:codes="117" android:keyLabel="山"/>
        <Key android:codes="105" android:keyLabel="戈"/>
        <Key android:codes="111" android:keyLabel="人"/>
        <Key android:codes="112" android:keyLabel="心" android:keyEdgeFlags="right"/>
    </Row>
    
    <Row>
        <Key android:codes="97" android:keyLabel="日" android:keyEdgeFlags="left"
        	android:horizontalGap="5%p"/>
        <Key android:codes="115" android:keyLabel="尸"/>
        <Key android:codes="100" android:keyLabel="木"/>
        <Key android:codes="102" android:keyLabel="火"/>
        <Key android:codes="103" android:keyLabel="土"/>
        <Key android:codes="104" android:keyLabel="竹"/>
        <Key android:codes="106" android:keyLabel="十"/>
        <Key android:codes="107" android:keyLabel="大"/>
        <Key android:codes="108" android:keyLabel="中" android:keyEdgeFlags="right"/>
    </Row>
    
    <Row>
        <Key android:codes="-1" android:keyIcon="@drawable/key_shift" 
                android:keyWidth="15%p" android:isModifier="true"
                android:isSticky="true" android:keyEdgeFlags="left"/>
        <Key android:codes="122" android:keyLabel="重"/>
        <Key android:codes="120" android:keyLabel="難"/>
        <Key android:codes="99" android:keyLabel="金"/>
        <Key android:codes="118" android:keyLabel="女"/>
        <Key android:codes="98" android:keyLabel="月"/>
        <Key android:codes="110" android:keyLabel="弓"/>
        <Key android:codes="109" android:keyLabel="一"/>
        <Key android:codes="-5" android:keyIcon="@drawable/key_delete"
                android:keyWidth="15%p" android:isRepeatable="true"
                android:keyEdgeFlags="right"/>
    </Row>
       
    <Row android:rowEdgeFlags="bottom">
        <Key android:codes="-3" android:keyIcon="@drawable/key_done" 
                android:keyWidth="10%p" android:keyEdgeFlags="left"/>
        <Key android:codes="-2" android:keyLabel="123" android:keyWidth="15%p"/>
        <Key android:codes="12288" android:keyIcon="@drawable/key_space" 
                android:keyWidth="40%p" android:isRepeatable="true"/>
        <Key android:codes="-300" android:keyIcon="@drawable/key_lang" android:keyWidth="15%p"/>
        <Key android:codes="10" android:keyIcon="@drawable/key_enter" 
                android:keyWidth="20%p" android:keyEdgeFlags="right"/>
    </Row>
</Keyboard>